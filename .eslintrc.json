{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style":"off",
        "no-console": "off",
        "no-undefined":"off",
        "no-useless-constructor": "off",
        "class-methods-use-this": "off",
        "camelcase":"off",
        "import/extensions":[
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
            
        ],
        "@typescript-eslint/no-unused-vars": ["error", {
            "argsIgnorePattern": "_"
        }]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
